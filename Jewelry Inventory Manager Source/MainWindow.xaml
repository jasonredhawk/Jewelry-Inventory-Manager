<Window x:Class="Moonglow_DB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Moonglow_DB"
        mc:Ignorable="d"
        Title="Moonglow Jewelry Management System" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/SharedStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#1976D2" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="💎" FontSize="32" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <TextBlock Text="Moonglow Jewelry Management System" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               VerticalAlignment="Center"/>
                </StackPanel>
                
                <Button x:Name="btnSettings" Grid.Column="1" Content="⚙ Settings" 
                        Style="{StaticResource WarningButtonStyle}" 
                        FontSize="12"
                        Click="btnSettings_Click"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <TextBlock Text="Welcome to Moonglow Jewelry Management System" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Margin="0,0,0,20"
                           HorizontalAlignment="Center"/>

                <TextBlock Text="Select an option to manage your jewelry business:" 
                           FontSize="16" 
                           Margin="0,0,0,20"
                           HorizontalAlignment="Center"/>

                <!-- Navigation Buttons -->
                <UniformGrid Columns="2" Margin="0,20">
                    <Button x:Name="btnProducts" 
                            Content="📦 Products Management" 
                            Style="{StaticResource ModernButtonStyle}"
                            Click="btnProducts_Click"/>
                    
                    <Button x:Name="btnComponents" 
                            Content="🔧 Component Management" 
                            Style="{StaticResource ComponentsButtonStyle}"
                            Click="btnComponents_Click"/>
                    
                    <Button x:Name="btnTransformation" 
                            Content="🔄 Component Transformation" 
                            Style="{StaticResource TransformationButtonStyle}"
                            Click="btnTransformation_Click"/>
                    
                    <Button x:Name="btnCategories" 
                            Content="📂 Category Management" 
                            Style="{StaticResource CategoriesButtonStyle}"
                            Click="btnCategories_Click"/>
                    
                    <Button x:Name="btnInventory" 
                            Content="📊 Inventory Tracking" 
                            Style="{StaticResource InventoryButtonStyle}"
                            Click="btnInventory_Click"/>
                    
                    <Button x:Name="btnOrders" 
                            Content="🛒 Orders &amp; Sales" 
                            Style="{StaticResource OrdersButtonStyle}"
                            Click="btnOrders_Click"/>
                    
                    <Button x:Name="btnCustomers" 
                            Content="👥 Customer Management" 
                            Style="{StaticResource CustomersButtonStyle}"
                            Click="btnCustomers_Click"/>
                    
                    <Button x:Name="btnEmployees" 
                            Content="👤 Employee Management" 
                            Style="{StaticResource EmployeesButtonStyle}"
                            Click="btnEmployees_Click"/>
                    
                    <Button x:Name="btnLocations" 
                            Content="🏪 Location Management" 
                            Style="{StaticResource LocationsButtonStyle}"
                            Click="btnLocations_Click"/>
                    
                    <Button x:Name="btnReports" 
                            Content="📈 Reports &amp; Analytics" 
                            Style="{StaticResource ReportsButtonStyle}"
                            Click="btnReports_Click"/>
                </UniformGrid>

                <!-- Quick Stats -->
                <Border Background="White" 
                        CornerRadius="10" 
                        Padding="20" 
                        Margin="0,30,0,0"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Quick Overview" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,15"/>
                        
                        <UniformGrid Columns="4">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="0" 
                                           FontSize="24" 
                                           FontWeight="Bold" 
                                           Foreground="#2196F3"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="Active Products" 
                                           FontSize="12" 
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                            
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="0" 
                                           FontSize="24" 
                                           FontWeight="Bold" 
                                           Foreground="#4CAF50"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="Components" 
                                           FontSize="12" 
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                            
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="0" 
                                           FontSize="24" 
                                           FontWeight="Bold" 
                                           Foreground="#FF9800"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="Low Stock Items" 
                                           FontSize="12" 
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                            
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="0" 
                                           FontSize="24" 
                                           FontWeight="Bold" 
                                           Foreground="#9C27B0"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="Today's Orders" 
                                           FontSize="12" 
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </UniformGrid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
