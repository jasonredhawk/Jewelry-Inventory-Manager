<Window x:Class="Moonglow_DB.Views.ComponentTransformationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="clr-namespace:Moonglow_DB.Views.Controls"
        Title="Component Transformation" Height="700" Width="1000"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles/SharedStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF9800" Padding="15">
            <TextBlock Text="Component Transformation" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <!-- Transformation Type Selection -->
                <Border Background="White" CornerRadius="5" Padding="15" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Transformation Type:" FontWeight="Bold" Margin="0,0,0,10"/>
                        <StackPanel Orientation="Horizontal">
                            <RadioButton x:Name="rbBreakDown" Content="Break Down Component" 
                                        IsChecked="True" Margin="0,0,20,0" 
                                        Checked="rbBreakDown_Checked"/>
                            <RadioButton x:Name="rbCombine" Content="Combine Components" 
                                        Checked="rbCombine_Checked"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Location Selection -->
                <Border Background="White" CornerRadius="5" Padding="15" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Location:" FontWeight="Bold" Margin="0,0,0,10"/>
                        <ComboBox x:Name="cmbLocation" Style="{StaticResource ModernComboBoxStyle}" 
                                  DisplayMemberPath="Name" SelectedValuePath="Id"/>
                    </StackPanel>
                </Border>

                <!-- Source Components Section -->
                <Border Background="White" CornerRadius="5" Padding="15" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock x:Name="txtSourceTitle" Text="Source Component:" FontWeight="Bold" Margin="0,0,0,10"/>
                        
                        <!-- Break Down Mode -->
                        <StackPanel x:Name="pnlBreakDown" Visibility="Visible">
                            <!-- Source Component Selection with Filtering -->
                            <Controls:FilteredComboBox x:Name="filteredSourceComponentComboBox" 
                                                      Margin="0,0,0,15"
                                                      SelectionChanged="FilteredSourceComponentComboBox_SelectionChanged"/>
                            
                            <!-- Quantity Row -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="Quantity:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBox x:Name="txtSourceQuantity" Width="80" 
                                         Style="{StaticResource ModernTextBoxStyle}" Text="1"
                                         PreviewTextInput="txtQuantity_PreviewTextInput"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Combine Mode -->
                        <StackPanel x:Name="pnlCombine" Visibility="Collapsed">
                            <!-- Add Component Selection with Filtering -->
                            <Controls:FilteredComboBox x:Name="filteredAddComponentComboBox" 
                                                      Margin="0,0,0,15"
                                                      SelectionChanged="FilteredAddComponentComboBox_SelectionChanged"/>
                            
                            <!-- Quantity and Add Button Row -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="Quantity:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBox x:Name="txtAddQuantity" Width="80" 
                                         Style="{StaticResource ModernTextBoxStyle}" Text="1"
                                         PreviewTextInput="txtQuantity_PreviewTextInput"/>
                                <Button x:Name="btnAddComponent" Content="Add" 
                                        Style="{StaticResource SuccessButtonStyle}" Margin="20,0,0,0"
                                        Click="btnAddComponent_Click"/>
                            </StackPanel>
                            
                            <!-- Selected Components List -->
                            <DataGrid x:Name="dgSourceComponents" Height="150" 
                                      AutoGenerateColumns="False" CanUserAddRows="False"
                                      Margin="0,10,0,10">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Component" Binding="{Binding ComponentName}" Width="200"/>
                                    <DataGridTextColumn Header="SKU" Binding="{Binding ComponentSKU}" Width="100"/>
                                    <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="80"/>
                                    <DataGridTextColumn Header="Unit Cost" Binding="{Binding UnitCost, StringFormat=C}" Width="100"/>
                                    <DataGridTextColumn Header="Total Cost" Binding="{Binding TotalCost, StringFormat=C}" Width="100"/>
                                </DataGrid.Columns>
                            </DataGrid>
                            
                            <Button x:Name="btnRemoveComponent" Content="Remove Selected" 
                                    Style="{StaticResource DangerButtonStyle}" HorizontalAlignment="Left"
                                    Click="btnRemoveComponent_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Result Components Section -->
                <Border Background="White" CornerRadius="5" Padding="15" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock x:Name="txtResultTitle" Text="Result Components:" FontWeight="Bold" Margin="0,0,0,10"/>
                        
                        <!-- Break Down Mode -->
                        <StackPanel x:Name="pnlBreakDownResults" Visibility="Visible">
                            <!-- Result Component Selection with Filtering -->
                            <Controls:FilteredComboBox x:Name="filteredResultComponentComboBox" 
                                                      Margin="0,0,0,15"
                                                      SelectionChanged="FilteredResultComponentComboBox_SelectionChanged"/>
                            
                            <!-- Quantity and Add Button Row -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="Quantity:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBox x:Name="txtResultQuantity" Width="80" 
                                         Style="{StaticResource ModernTextBoxStyle}" Text="1"
                                         PreviewTextInput="txtQuantity_PreviewTextInput"/>
                                <Button x:Name="btnAddResult" Content="Add Result" 
                                        Style="{StaticResource SuccessButtonStyle}" Margin="20,0,0,0"
                                        Click="btnAddResult_Click"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Combine Mode -->
                        <StackPanel x:Name="pnlCombineResults" Visibility="Collapsed">
                            <!-- Combine Result Component Selection with Filtering -->
                            <Controls:FilteredComboBox x:Name="filteredCombineResultComponentComboBox" 
                                                      Margin="0,0,0,15"
                                                      SelectionChanged="FilteredCombineResultComponentComboBox_SelectionChanged"/>
                            
                            <!-- Quantity and Add Button Row -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="Quantity:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBox x:Name="txtCombineResultQuantity" Width="80" 
                                         Style="{StaticResource ModernTextBoxStyle}" Text="1"
                                         PreviewTextInput="txtQuantity_PreviewTextInput"/>
                                <Button x:Name="btnAddCombineResult" Content="Add Result" 
                                        Style="{StaticResource SuccessButtonStyle}" Margin="20,0,0,0"
                                        Click="btnAddCombineResult_Click"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- Result Components List -->
                        <DataGrid x:Name="dgResultComponents" Height="150" 
                                  AutoGenerateColumns="False" CanUserAddRows="False"
                                  Margin="0,10,0,10">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Component" Binding="{Binding ComponentName}" Width="200"/>
                                <DataGridTextColumn Header="SKU" Binding="{Binding ComponentSKU}" Width="100"/>
                                <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="80"/>
                                <DataGridTextColumn Header="Unit Cost" Binding="{Binding UnitCost, StringFormat=C}" Width="100"/>
                                <DataGridTextColumn Header="Total Cost" Binding="{Binding TotalCost, StringFormat=C}" Width="100"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        
                        <Button x:Name="btnRemoveResult" Content="Remove Selected" 
                                Style="{StaticResource DangerButtonStyle}" HorizontalAlignment="Left"
                                Click="btnRemoveResult_Click"/>
                    </StackPanel>
                </Border>

                <!-- Notes Section -->
                <Border Background="White" CornerRadius="5" Padding="15" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Notes:" FontWeight="Bold" Margin="0,0,0,10"/>
                        <TextBox x:Name="txtNotes" Height="80" 
                                 Style="{StaticResource ModernTextBoxStyle}" 
                                 TextWrapping="Wrap" AcceptsReturn="True" 
                                 VerticalScrollBarVisibility="Auto"/>
                    </StackPanel>
                </Border>

                <!-- Summary Section -->
                <Border Background="#E3F2FD" CornerRadius="5" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Transformation Summary:" FontWeight="Bold" Margin="0,0,0,10"/>
                        <TextBlock x:Name="txtSummary" Text="Configure your transformation to see summary"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <Border Grid.Row="2" Background="White" Padding="15" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="btnExecute" 
                        Content="Execute Transformation" 
                        Style="{StaticResource SuccessButtonStyle}"
                        Click="btnExecute_Click"
                        Margin="0,0,10,0"/>
                
                <Button x:Name="btnCancel" 
                        Content="Cancel" 
                        Style="{StaticResource DangerButtonStyle}"
                        Click="btnCancel_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window> 