<Window x:Class="Moonglow_DB.Views.EditLocationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Location" Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles/SharedStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#E91E63" Padding="15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="ðŸª" FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBlock Text="Edit Location" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20" VerticalAlignment="Top">
                
                <!-- Name -->
                <TextBlock Text="Location Name *" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="txtName" 
                         Style="{StaticResource ModernTextBoxStyle}"
                         Margin="0,0,0,15"/>

                <!-- Address -->
                <TextBlock Text="Address" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="txtAddress" 
                         Style="{StaticResource ModernTextBoxStyle}"
                         Margin="0,0,0,15"/>

                <!-- Phone -->
                <TextBlock Text="Phone" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="txtPhone" 
                         Style="{StaticResource ModernTextBoxStyle}"
                         Margin="0,0,0,15"/>

                <!-- Email -->
                <TextBlock Text="Email" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="txtEmail" 
                         Style="{StaticResource ModernTextBoxStyle}"
                         Margin="0,0,0,15"/>

                <!-- Status Options -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <CheckBox x:Name="chkIsOnline" Content="Online Location" 
                              VerticalAlignment="Center" Margin="0,0,20,0"/>
                    <CheckBox x:Name="chkIsActive" Content="Active Location" 
                              VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Notes -->
                <TextBlock Text="Notes (Optional)" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="txtNotes" 
                         Style="{StaticResource ModernTextBoxStyle}"
                         Height="80" 
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         Margin="0,0,0,15"/>

            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="20">
            <Button x:Name="btnSave" Content="ðŸ’¾ Save Changes" 
                    Style="{StaticResource SuccessButtonStyle}"
                    Click="btnSave_Click" Margin="0,0,10,0"/>
            <Button x:Name="btnCancel" Content="âŒ Cancel" 
                    Style="{StaticResource ModernButtonStyle}"
                    Click="btnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window> 