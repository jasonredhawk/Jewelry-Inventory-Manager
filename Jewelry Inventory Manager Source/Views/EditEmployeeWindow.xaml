<Window x:Class="Moonglow_DB.Views.EditEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Employee" Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles/SharedStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#795548" Padding="15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="✏️" FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBlock Text="Edit Employee" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20" VerticalAlignment="Top">
                
                <!-- First Name -->
                <TextBlock Text="First Name *" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="txtFirstName" 
                         Style="{StaticResource ModernTextBoxStyle}"
                         Margin="0,0,0,15"/>

                <!-- Last Name -->
                <TextBlock Text="Last Name *" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="txtLastName" 
                         Style="{StaticResource ModernTextBoxStyle}"
                         Margin="0,0,0,15"/>

                <!-- Email -->
                <TextBlock Text="Email" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="txtEmail" 
                         Style="{StaticResource ModernTextBoxStyle}"
                         Margin="0,0,0,15"/>

                <!-- Phone -->
                <TextBlock Text="Phone" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="txtPhone" 
                         Style="{StaticResource ModernTextBoxStyle}"
                         Margin="0,0,0,15"/>

                <!-- Commission Rate -->
                <TextBlock Text="Commission Rate (%)" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="txtCommissionRate" 
                         Style="{StaticResource ModernTextBoxStyle}"
                         Margin="0,0,0,15"/>

                <!-- Hire Date -->
                <TextBlock Text="Hire Date *" FontWeight="Bold" Margin="0,0,0,5"/>
                <DatePicker x:Name="dpHireDate" 
                            Margin="0,0,0,15"/>

                <!-- Active Status -->
                <CheckBox x:Name="chkIsActive" Content="Active Employee" 
                          VerticalAlignment="Center" Margin="0,0,0,15"/>

            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="20">
            <Button x:Name="btnSave" Content="💾 Save Changes" 
                    Style="{StaticResource SuccessButtonStyle}"
                    Click="btnSave_Click" Margin="0,0,10,0"/>
            <Button x:Name="btnCancel" Content="❌ Cancel" 
                    Style="{StaticResource ModernButtonStyle}"
                    Click="btnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window> 