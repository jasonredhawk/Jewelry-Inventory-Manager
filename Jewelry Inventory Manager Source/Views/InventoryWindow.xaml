<Window x:Class="Moonglow_DB.Views.InventoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Inventory Tracking" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles/SharedStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF9800" Padding="15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="📊" FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBlock Text="Inventory Tracking" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <TabControl Grid.Row="1" Margin="15">
            
            <!-- Stock Overview Tab -->
            <TabItem Header="📋 Stock Overview">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Summary Cards -->
                    <UniformGrid Grid.Row="0" Columns="4" Margin="0,0,0,20">
                        <Border Background="White" CornerRadius="8" Padding="15" Margin="5" BorderBrush="#E0E0E0" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="Total Products" FontSize="12" Foreground="#666"/>
                                <TextBlock x:Name="txtTotalProducts" Text="0" FontSize="24" FontWeight="Bold" Foreground="#2196F3"/>
                            </StackPanel>
                        </Border>
                        
                        <Border Background="White" CornerRadius="8" Padding="15" Margin="5" BorderBrush="#E0E0E0" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="Total Components" FontSize="12" Foreground="#666"/>
                                <TextBlock x:Name="txtTotalComponents" Text="0" FontSize="24" FontWeight="Bold" Foreground="#4CAF50"/>
                            </StackPanel>
                        </Border>
                        
                        <Border Background="White" CornerRadius="8" Padding="15" Margin="5" BorderBrush="#E0E0E0" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="Low Stock Items" FontSize="12" Foreground="#666"/>
                                <TextBlock x:Name="txtLowStockItems" Text="0" FontSize="24" FontWeight="Bold" Foreground="#F44336"/>
                            </StackPanel>
                        </Border>
                        
                        <Border Background="White" CornerRadius="8" Padding="15" Margin="5" BorderBrush="#E0E0E0" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="Out of Stock" FontSize="12" Foreground="#666"/>
                                <TextBlock x:Name="txtOutOfStock" Text="0" FontSize="24" FontWeight="Bold" Foreground="#FF9800"/>
                            </StackPanel>
                        </Border>
                    </UniformGrid>

                    <!-- Help Section -->
                    <Border Grid.Row="1" Background="#E8F5E8" CornerRadius="8" Padding="15" Margin="0,0,0,20" BorderBrush="#4CAF50" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="ℹ️ Inventory Management Guide" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                            <TextBlock TextWrapping="Wrap" FontSize="12">
                                <Run Text="📦 Products: "/><Run Text="Stock is calculated automatically from component availability. Can only be returned (which restocks components)." FontWeight="Bold"/>
                                <LineBreak/>
                                <Run Text="🔧 Components: "/><Run Text="Can be directly adjusted through inventory transactions." FontWeight="Bold"/>
                                <LineBreak/>
                                <Run Text="📝 Transaction Types: "/><Run Text="Add Stock (add), Remove Stock (remove), Adjustment (correct), Return (add back), Transfer (move between locations)" FontWeight="Bold"/>
                                <LineBreak/>
                                <Run Text="🔄 Product Returns: "/><Run Text="When returning a product, the system automatically restocks its components." FontWeight="Bold"/>
                                <LineBreak/>
                                <Run Text="💡 Tip: "/><Run Text="Use Component Transformations to convert between products and components." FontWeight="Bold"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Toolbar -->
                    <Border Grid.Row="2" Background="White" Padding="15" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="btnRefresh" 
                                    Content="🔄 Refresh" 
                                    Style="{StaticResource ModernButtonStyle}"
                                    Click="btnRefresh_Click"/>
                            
                            <Button x:Name="btnAddTransaction" 
                                    Content="➕ Add Transaction" 
                                    Style="{StaticResource SuccessButtonStyle}"
                                    Click="btnAddTransaction_Click"/>
                            
                            <Button x:Name="btnTransfer" 
                                    Content="🚚 Transfer" 
                                    Style="{StaticResource WarningButtonStyle}"
                                    Click="btnTransfer_Click"/>
                            
                            <Button x:Name="btnGeneratePO" 
                                    Content="📋 Generate PO" 
                                    Style="{StaticResource ModernButtonStyle}"
                                    Click="btnGeneratePO_Click"/>
                            
                            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="20,0"/>
                            
                            <TextBlock Text="Location:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <ComboBox x:Name="cmbLocationFilter" Width="150" Margin="0,0,10,0" SelectionChanged="cmbLocationFilter_SelectionChanged">
                                <ComboBoxItem Content="All Locations" IsSelected="True"/>
                            </ComboBox>
                            
                            <TextBlock Text="Filter:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <ComboBox x:Name="cmbFilter" Width="150" Margin="0,0,10,0" SelectionChanged="cmbFilter_SelectionChanged">
                                <ComboBoxItem Content="All Items" IsSelected="True"/>
                                <ComboBoxItem Content="Low Stock"/>
                                <ComboBoxItem Content="Out of Stock"/>
                                <ComboBoxItem Content="Products Only"/>
                                <ComboBoxItem Content="Components Only"/>
                            </ComboBox>
                            
                            <TextBlock Text="Search:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBox x:Name="txtSearch" 
                                     Width="200" 
                                     Style="{StaticResource ModernTextBoxStyle}"
                                     TextChanged="txtSearch_TextChanged"
                                     VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Inventory DataGrid -->
                    <DataGrid x:Name="dgInventory" 
                              Grid.Row="3" 
                              Margin="0,15,0,0"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              SelectionMode="Single"
                              SelectionChanged="dgInventory_SelectionChanged"
                              Background="White"
                              BorderBrush="#E0E0E0"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column">
                        
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Type" Binding="{Binding ItemType}" Width="80"/>
                            <DataGridTextColumn Header="SKU" Binding="{Binding SKU}" Width="120"/>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="200"/>
                            <DataGridTextColumn Header="Total Stock" Binding="{Binding CurrentStock}" Width="100"/>
                            <DataGridTextColumn Header="Min Stock" Binding="{Binding MinimumStock}" Width="100"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding StockStatus}" Width="100"/>
                            <DataGridTextColumn Header="Last Updated" Binding="{Binding LastModified, StringFormat=MM/dd/yyyy}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Location Inventory Tab -->
            <TabItem Header="🏢 Location Inventory">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Location Inventory Toolbar -->
                    <Border Grid.Row="0" Background="White" Padding="15" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="btnRefreshLocationInventory" 
                                    Content="🔄 Refresh" 
                                    Style="{StaticResource ModernButtonStyle}"
                                    Click="btnRefreshLocationInventory_Click"/>
                            
                            <Button x:Name="btnTransferBetweenLocations" 
                                    Content="🚚 Transfer Between Locations" 
                                    Style="{StaticResource WarningButtonStyle}"
                                    Click="btnTransferBetweenLocations_Click"/>
                            
                            <Button x:Name="btnSetMinimumStock" 
                                    Content="⚙️ Set Minimum Stock" 
                                    Style="{StaticResource ModernButtonStyle}"
                                    Click="btnSetMinimumStock_Click"/>
                            
                            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="20,0"/>
                            
                            <TextBlock Text="Location:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <ComboBox x:Name="cmbLocationFilter2" Width="150" Margin="0,0,10,0" SelectionChanged="cmbLocationFilter2_SelectionChanged">
                                <ComboBoxItem Content="All Locations" IsSelected="True"/>
                            </ComboBox>
                            
                            <TextBlock Text="Filter:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <ComboBox x:Name="cmbFilter2" Width="150" Margin="0,0,10,0" SelectionChanged="cmbFilter2_SelectionChanged">
                                <ComboBoxItem Content="All Items" IsSelected="True"/>
                                <ComboBoxItem Content="Low Stock"/>
                                <ComboBoxItem Content="Out of Stock"/>
                                <ComboBoxItem Content="Products Only"/>
                                <ComboBoxItem Content="Components Only"/>
                            </ComboBox>
                            
                            <TextBlock Text="Search:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBox x:Name="txtSearch2" 
                                     Width="200" 
                                     Style="{StaticResource ModernTextBoxStyle}"
                                     TextChanged="txtSearch2_TextChanged"
                                     VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Location Inventory DataGrid -->
                    <DataGrid x:Name="dgLocationInventory" 
                              Grid.Row="1" 
                              Margin="0,15,0,0"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              SelectionMode="Single"
                              SelectionChanged="dgLocationInventory_SelectionChanged"
                              Background="White"
                              BorderBrush="#E0E0E0"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column">
                        
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Type" Binding="{Binding ItemType}" Width="80"/>
                            <DataGridTextColumn Header="SKU" Binding="{Binding SKU}" Width="120"/>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="200"/>
                            <DataGridTextColumn Header="Location" Binding="{Binding LocationName}" Width="120"/>
                            <DataGridTextColumn Header="Location Stock" Binding="{Binding CurrentStock}" Width="100"/>
                            <DataGridTextColumn Header="Total Stock" Binding="{Binding TotalStockAcrossLocations}" Width="100"/>
                            <DataGridTextColumn Header="Min Stock" Binding="{Binding MinimumStock}" Width="100"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding StockStatus}" Width="100"/>
                            <DataGridTextColumn Header="Last Updated" Binding="{Binding LastModified, StringFormat=MM/dd/yyyy}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Transactions Tab -->
            <TabItem Header="📝 Transactions">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Transactions Toolbar -->
                    <Border Grid.Row="0" Background="White" Padding="15" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="btnRefreshTransactions" 
                                    Content="🔄 Refresh" 
                                    Style="{StaticResource ModernButtonStyle}"
                                    Click="btnRefreshTransactions_Click"/>
                            
                            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="20,0"/>
                            
                            <TextBlock Text="Date Range:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <DatePicker x:Name="dpStartDate" Width="120" Margin="0,0,10,0"/>
                            <TextBlock Text="to" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <DatePicker x:Name="dpEndDate" Width="120" Margin="0,0,20,0"/>
                            
                            <Button x:Name="btnFilterTransactions" 
                                    Content="🔍 Filter" 
                                    Style="{StaticResource ModernButtonStyle}"
                                    Click="btnFilterTransactions_Click"/>
                        </StackPanel>
                    </Border>

                    <!-- Transactions DataGrid -->
                    <DataGrid x:Name="dgTransactions" 
                              Grid.Row="1" 
                              Margin="0,15,0,0"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              SelectionMode="Single"
                              Background="White"
                              BorderBrush="#E0E0E0"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column">
                        
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Date" Binding="{Binding TransactionDate, StringFormat=MM/dd/yyyy HH:mm}" Width="120"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding TransactionType}" Width="100"/>
                            <DataGridTextColumn Header="Item" Binding="{Binding ItemName}" Width="200"/>
                            <DataGridTextColumn Header="Location" Binding="{Binding LocationName}" Width="120"/>
                            <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="80"/>
                            <DataGridTextColumn Header="Notes" Binding="{Binding Notes}" Width="200"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Alerts Tab -->
            <TabItem Header="⚠️ Alerts">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Alerts Toolbar -->
                    <Border Grid.Row="0" Background="White" Padding="15" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="btnRefreshAlerts" 
                                    Content="🔄 Refresh" 
                                    Style="{StaticResource ModernButtonStyle}"
                                    Click="btnRefreshAlerts_Click"/>
                            
                            <Button x:Name="btnDismissAlert" 
                                    Content="✅ Dismiss" 
                                    Style="{StaticResource SuccessButtonStyle}"
                                    Click="btnDismissAlert_Click"/>
                            
                            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="20,0"/>
                            
                            <TextBlock Text="Alert Type:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <ComboBox x:Name="cmbAlertType" Width="150" SelectionChanged="cmbAlertType_SelectionChanged">
                                <ComboBoxItem Content="All Alerts" IsSelected="True"/>
                                <ComboBoxItem Content="Low Stock"/>
                                <ComboBoxItem Content="Out of Stock"/>
                                <ComboBoxItem Content="Expiring Soon"/>
                            </ComboBox>
                        </StackPanel>
                    </Border>

                    <!-- Alerts DataGrid -->
                    <DataGrid x:Name="dgAlerts" 
                              Grid.Row="1" 
                              Margin="0,15,0,0"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              SelectionMode="Single"
                              SelectionChanged="dgAlerts_SelectionChanged"
                              Background="White"
                              BorderBrush="#E0E0E0"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column">
                        
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Date" Binding="{Binding AlertDate, StringFormat=MM/dd/yyyy}" Width="100"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding AlertType}" Width="100"/>
                            <DataGridTextColumn Header="Item" Binding="{Binding ItemName}" Width="200"/>
                            <DataGridTextColumn Header="Location" Binding="{Binding LocationName}" Width="120"/>
                            <DataGridTextColumn Header="Current Stock" Binding="{Binding CurrentStock}" Width="100"/>
                            <DataGridTextColumn Header="Min Stock" Binding="{Binding MinimumStock}" Width="100"/>
                            <DataGridTextColumn Header="Message" Binding="{Binding Message}" Width="300"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Window> 