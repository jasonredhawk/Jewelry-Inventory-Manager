<Window x:Class="Moonglow_DB.Views.InventoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Inventory Tracking" Height="900" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles/SharedStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Row Style for Inventory DataGrid -->
            <Style x:Key="InventoryRowStyle" TargetType="DataGridRow">
                <Style.Triggers>
                    <DataTrigger Binding="{Binding StockStatus}" Value="In Stock">
                        <Setter Property="Background" Value="#E8F5E8"/>
                        <Setter Property="BorderBrush" Value="#4CAF50"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding StockStatus}" Value="Low Stock">
                        <Setter Property="Background" Value="#FFF3E0"/>
                        <Setter Property="BorderBrush" Value="#FF9800"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding StockStatus}" Value="Out of Stock">
                        <Setter Property="Background" Value="#FFEBEE"/>
                        <Setter Property="BorderBrush" Value="#F44336"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding StockStatus}" Value="Over Stock">
                        <Setter Property="Background" Value="#E3F2FD"/>
                        <Setter Property="BorderBrush" Value="#2196F3"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF9800" Padding="15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="ðŸ“Š" FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBlock Text="Inventory Tracking" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <TabControl Grid.Row="1" Margin="15">

            <!-- Stock Overview Tab -->
            <TabItem Header="ðŸ“‹ Stock Overview">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Summary Cards -->
                    <UniformGrid Grid.Row="0" Columns="3" Margin="0,0,0,20">
                        <!-- Row 1 -->
                        <Border Background="White" CornerRadius="8" Padding="15" Margin="5" BorderBrush="#E0E0E0" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="Total Products" FontSize="12" Foreground="#666"/>
                                <TextBlock x:Name="txtTotalProducts" Text="0" FontSize="24" FontWeight="Bold" Foreground="#2196F3"/>
                            </StackPanel>
                        </Border>
                        
                        <Border Background="White" CornerRadius="8" Padding="15" Margin="5" BorderBrush="#E0E0E0" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="Total Components" FontSize="12" Foreground="#666"/>
                                <TextBlock x:Name="txtTotalComponents" Text="0" FontSize="24" FontWeight="Bold" Foreground="#4CAF50"/>
                            </StackPanel>
                        </Border>
                        
                        <Border Background="White" CornerRadius="8" Padding="15" Margin="5" BorderBrush="#E0E0E0" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="In Stock Items" FontSize="12" Foreground="#666"/>
                                <TextBlock x:Name="txtInStockItems" Text="0" FontSize="24" FontWeight="Bold" Foreground="#4CAF50"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Row 2 -->
                        <Border Background="White" CornerRadius="8" Padding="15" Margin="5" BorderBrush="#E0E0E0" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="Low Stock Items" FontSize="12" Foreground="#666"/>
                                <TextBlock x:Name="txtLowStockItems" Text="0" FontSize="24" FontWeight="Bold" Foreground="#FF9800"/>
                            </StackPanel>
                        </Border>
                        
                        <Border Background="White" CornerRadius="8" Padding="15" Margin="5" BorderBrush="#E0E0E0" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="Out of Stock" FontSize="12" Foreground="#666"/>
                                <TextBlock x:Name="txtOutOfStock" Text="0" FontSize="24" FontWeight="Bold" Foreground="#F44336"/>
                            </StackPanel>
                        </Border>
                        
                        <Border Background="White" CornerRadius="8" Padding="15" Margin="5" BorderBrush="#E0E0E0" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="Over Stock Items" FontSize="12" Foreground="#666"/>
                                <TextBlock x:Name="txtOverStockItems" Text="0" FontSize="24" FontWeight="Bold" Foreground="#2196F3"/>
                            </StackPanel>
                        </Border>
                    </UniformGrid>

                    <!-- Help Section -->
                    <Border Grid.Row="1" Background="#E8F5E8" CornerRadius="8" Padding="15" Margin="0,0,0,20" BorderBrush="#4CAF50" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="â„¹ï¸ Inventory Management Guide" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                            <TextBlock TextWrapping="Wrap" FontSize="12">
                                <Run Text="ðŸ“¦ Products: "/><Run Text="Stock is calculated automatically from component availability. Can only be returned (which restocks components)." FontWeight="Bold"/>
                                <LineBreak/>
                                <Run Text="ðŸ”§ Components: "/><Run Text="Can be directly adjusted through inventory transactions." FontWeight="Bold"/>
                                <LineBreak/>
                                <Run Text="ðŸ“ Transaction Types: "/><Run Text="Add Stock (add), Remove Stock (remove), Adjustment (correct), Return (add back), Transfer (move between locations)" FontWeight="Bold"/>
                                <LineBreak/>
                                <Run Text="ðŸ”„ Product Returns: "/><Run Text="When returning a product, the system automatically restocks its components." FontWeight="Bold"/>
                                <LineBreak/>
                                <Run Text="ðŸ’¡ Tip: "/><Run Text="Use Component Transformations to convert between products and components." FontWeight="Bold"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Toolbar -->
                    <Border Grid.Row="2" Background="White" Padding="15" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Action Buttons Row -->
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                                <Button x:Name="btnRefresh" 
                                        Content="ðŸ”„ Refresh" 
                                        Style="{StaticResource ModernButtonStyle}"
                                        Click="btnRefresh_Click"/>

                                <Button x:Name="btnAddTransaction" 
                                        Content="âž• Add Transaction" 
                                        Style="{StaticResource SuccessButtonStyle}"
                                        Click="btnAddTransaction_Click"/>

                                <Button x:Name="btnTransfer" 
                                        Content="ðŸšš Bulk Transfer" 
                                        Style="{StaticResource WarningButtonStyle}"
                                        Click="btnTransfer_Click"/>

                                <Button x:Name="btnGeneratePO" 
                                        Content="ðŸ“‹ Generate PO" 
                                        Style="{StaticResource ModernButtonStyle}"
                                        Click="btnGeneratePO_Click"/>

                                <Button x:Name="btnSetStockLevels" 
                                        Content="ðŸ“Š Set Stock Levels" 
                                        Style="{StaticResource ModernButtonStyle}"
                                        Click="btnSetStockLevels_Click"/>
                            </StackPanel>

                            <!-- Filters Row -->
                            <StackPanel Grid.Row="1" Orientation="Horizontal">
                                <TextBlock Text="Stock Levels:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <ComboBox x:Name="cmbFilter" Width="120" Height="28" Margin="0,0,15,0" SelectionChanged="cmbFilter_SelectionChanged">
                                    <ComboBoxItem Content="All Items" IsSelected="True"/>
                                    <ComboBoxItem Content="In Stock"/>
                                    <ComboBoxItem Content="Low Stock"/>
                                    <ComboBoxItem Content="Out of Stock"/>
                                    <ComboBoxItem Content="Over Stock"/>
                                </ComboBox>

                                <TextBlock Text="Location:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <ComboBox x:Name="cmbLocationFilter" Width="120" Height="28" Margin="0,0,15,0" SelectionChanged="cmbLocationFilter_SelectionChanged">
                                    <ComboBoxItem Content="All Locations" IsSelected="True"/>
                                </ComboBox>

                                <TextBlock Text="Category:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <ComboBox x:Name="cmbCategoryFilter" Width="120" Height="28" Margin="0,0,15,0" SelectionChanged="cmbCategoryFilter_SelectionChanged">
                                    <ComboBoxItem Content="All Categories" IsSelected="True"/>
                                </ComboBox>

                                <TextBlock Text="Item Type:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <ComboBox x:Name="cmbItemTypeFilter" Width="120" Height="28" Margin="0,0,15,0" SelectionChanged="cmbItemTypeFilter_SelectionChanged">
                                    <ComboBoxItem Content="All Types" IsSelected="True"/>
                                    <ComboBoxItem Content="Products"/>
                                    <ComboBoxItem Content="Components"/>
                                </ComboBox>

                                <TextBlock Text="Search:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBox x:Name="txtSearch" 
                                         Width="150" Height="28"
                                         Style="{StaticResource ModernTextBoxStyle}"
                                         TextChanged="txtSearch_TextChanged"
                                         VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Inventory DataGrid -->
                    <DataGrid x:Name="dgInventory" 
                              Grid.Row="3" 
                              Margin="0,15,0,0"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              SelectionMode="Single"
                              SelectionChanged="dgInventory_SelectionChanged"
                              Background="White"
                              BorderBrush="#E0E0E0"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column"
                              RowStyle="{StaticResource InventoryRowStyle}">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Type" Binding="{Binding ItemType}" Width="80"/>
                            <DataGridTextColumn Header="SKU" Binding="{Binding SKU}" Width="140"/>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="250"/>
                            <DataGridTextColumn Header="Location" Binding="{Binding LocationName}" Width="140"/>
                            <DataGridTextColumn Header="Location Stock" Binding="{Binding CurrentStock}" Width="110"/>
                            <DataGridTextColumn Header="Total Stock" Binding="{Binding TotalStockAcrossLocations}" Width="110"/>
                            <DataGridTextColumn Header="Full Stock" Binding="{Binding FullStock}" Width="110"/>
                            <DataGridTextColumn Header="Min Stock" Binding="{Binding MinimumStock}" Width="110"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding StockStatus}" Width="110"/>
                            <DataGridTextColumn Header="Last Updated" Binding="{Binding LastModified, StringFormat=MM/dd/yyyy}" Width="130"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>



            <!-- Transactions Tab -->
            <TabItem Header="ðŸ“ Transactions">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Transactions Toolbar -->
                    <Border Grid.Row="0" Background="White" Padding="15" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="btnRefreshTransactions" 
                                    Content="ðŸ”„ Refresh" 
                                    Style="{StaticResource ModernButtonStyle}"
                                    Click="btnRefreshTransactions_Click"/>

                            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="20,0"/>

                            <TextBlock Text="Date Range:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <DatePicker x:Name="dpStartDate" Width="120" Margin="0,0,10,0"/>
                            <TextBlock Text="to" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <DatePicker x:Name="dpEndDate" Width="120" Margin="0,0,20,0"/>

                            <Button x:Name="btnFilterTransactions" 
                                    Content="ðŸ” Filter" 
                                    Style="{StaticResource ModernButtonStyle}"
                                    Click="btnFilterTransactions_Click"/>
                        </StackPanel>
                    </Border>

                    <!-- Transactions DataGrid -->
                    <DataGrid x:Name="dgTransactions" 
                              Grid.Row="1" 
                              Margin="0,15,0,0"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              SelectionMode="Single"
                              Background="White"
                              BorderBrush="#E0E0E0"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Date" Binding="{Binding TransactionDate, StringFormat=MM/dd/yyyy HH:mm}" Width="120"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding TransactionType}" Width="100"/>
                            <DataGridTextColumn Header="Item" Binding="{Binding ItemName}" Width="200"/>
                            <DataGridTextColumn Header="Location" Binding="{Binding LocationName}" Width="120"/>
                            <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="80"/>
                            <DataGridTextColumn Header="Notes" Binding="{Binding Notes}" Width="200"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>



        </TabControl>
    </Grid>
</Window> 