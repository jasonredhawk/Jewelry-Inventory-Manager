<UserControl x:Class="Moonglow_DB.Views.Controls.FilteredComboBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Moonglow_DB.Views.Controls">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../Styles/SharedStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <StackPanel>
        <!-- Filter Control -->
        <local:ItemFilterControl x:Name="itemFilterControl" 
                                FilterChanged="ItemFilterControl_FilterChanged"/>
        
        <!-- Item Selection -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock x:Name="lblItemType" 
                       Text="Item:" 
                       VerticalAlignment="Center" 
                       Width="100" 
                       FontWeight="Bold"/>
            <ComboBox x:Name="cmbItem" 
                      Width="300" 
                      Height="30" 
                      Margin="0,0,0,0" 
                      SelectionChanged="cmbItem_SelectionChanged"
                      DisplayMemberPath="DisplayText"/>
        </StackPanel>
    </StackPanel>
</UserControl> 