<Window x:Class="Moonglow_DB.Views.AddInventoryTransactionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="clr-namespace:Moonglow_DB.Views.Controls"
        Title="Add Inventory Transaction" Height="600" Width="700"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles/SharedStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF9800" Padding="15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="ðŸ“Š" FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBlock Text="Add Inventory Transaction" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20" VerticalAlignment="Top">
                
                <!-- Transaction Type with Explanation -->
                <TextBlock Text="Transaction Type *" FontWeight="Bold" Margin="0,0,0,5"/>
                <ComboBox x:Name="cmbTransactionType" 
                          Style="{StaticResource ModernComboBoxStyle}"
                          SelectionChanged="cmbTransactionType_SelectionChanged"
                          Margin="0,0,0,5"/>
                
                <!-- Transaction Type Explanation -->
                <Border Background="#E3F2FD" CornerRadius="5" Padding="10" Margin="0,0,0,15">
                    <TextBlock x:Name="txtTransactionTypeExplanation" 
                               Text="Select a transaction type to see its description"
                               TextWrapping="Wrap"
                               FontSize="12"/>
                </Border>

                <!-- Item Type -->
                <TextBlock Text="Item Type *" FontWeight="Bold" Margin="0,0,0,5"/>
                <ComboBox x:Name="cmbItemType" 
                          Style="{StaticResource ModernComboBoxStyle}"
                          SelectionChanged="cmbItemType_SelectionChanged"
                          Margin="0,0,0,15"/>

                <!-- Item Selection with Filtering -->
                <TextBlock Text="Item *" FontWeight="Bold" Margin="0,0,0,5"/>
                <Controls:FilteredComboBox x:Name="filteredItemComboBox" 
                                          SelectionChanged="FilteredItemComboBox_SelectionChanged"
                                          Margin="0,0,0,15"/>

                <!-- Location -->
                <TextBlock Text="Location *" FontWeight="Bold" Margin="0,0,0,5"/>
                <ComboBox x:Name="cmbLocation" 
                          Style="{StaticResource ModernComboBoxStyle}"
                          Margin="0,0,0,15"/>

                <!-- Quantity -->
                <TextBlock Text="Quantity *" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="txtQuantity" 
                         Style="{StaticResource ModernTextBoxStyle}"
                         Text="0"
                         PreviewTextInput="txtQuantity_PreviewTextInput"
                         Margin="0,0,0,15"/>

                <!-- Current Stock Display -->
                <Border Background="#F5F5F5" CornerRadius="5" Padding="10" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Current Stock Information" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBlock x:Name="txtCurrentStockInfo" 
                                   Text="Select an item to see current stock information"
                                   TextWrapping="Wrap"
                                   FontSize="12"/>
                    </StackPanel>
                </Border>

                <!-- Notes -->
                <TextBlock Text="Notes" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="txtNotes" 
                         Style="{StaticResource ModernTextBoxStyle}"
                         Height="80"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         Margin="0,0,0,15"/>

            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="20">
            <Button x:Name="btnSave" Content="ðŸ’¾ Save Transaction" 
                    Style="{StaticResource SuccessButtonStyle}"
                    Click="btnSave_Click" Margin="0,0,10,0"/>
            <Button x:Name="btnCancel" Content="âŒ Cancel" 
                    Style="{StaticResource ModernButtonStyle}"
                    Click="btnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window> 