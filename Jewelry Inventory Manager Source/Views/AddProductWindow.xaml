<Window x:Class="Moonglow_DB.Views.AddProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="clr-namespace:Moonglow_DB.Views.Controls"
        Title="Add New Product" Height="800" Width="900"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles/SharedStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="15">
            <TextBlock Text="Add New Product" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Product Name -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Product Name:" VerticalAlignment="Center" Margin="0,10"/>
                    <TextBox x:Name="txtName" Grid.Row="0" Grid.Column="1" Style="{StaticResource ModernTextBoxStyle}" Margin="0,10"/>

                    <!-- Description -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Description:" VerticalAlignment="Top" Margin="0,10"/>
                    <TextBox x:Name="txtDescription" Grid.Row="1" Grid.Column="1" Style="{StaticResource ModernTextBoxStyle}" 
                             Height="60" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Margin="0,10"/>

                    <!-- Category -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Category:" VerticalAlignment="Center" Margin="0,10"/>
                    <ComboBox x:Name="cmbCategory" Grid.Row="2" Grid.Column="1" Style="{StaticResource ModernComboBoxStyle}" 
                              DisplayMemberPath="Name" SelectedValuePath="Id" Margin="0,10"/>

                    <!-- Price -->
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Price:" VerticalAlignment="Center" Margin="0,10"/>
                    <TextBox x:Name="txtPrice" Grid.Row="3" Grid.Column="1" Style="{StaticResource ModernTextBoxStyle}" Margin="0,10"/>

                    <!-- Auto-generate SKU from components -->
                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Auto SKU:" VerticalAlignment="Center" Margin="0,10"/>
                    <CheckBox x:Name="chkAutoSKU" Grid.Row="4" Grid.Column="1" Margin="0,10" IsChecked="True"
                              Checked="chkAutoSKU_Checked" Unchecked="chkAutoSKU_Unchecked"/>

                    <!-- Generated SKU Display -->
                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Generated SKU:" VerticalAlignment="Center" Margin="0,10"/>
                    <TextBox x:Name="txtSKU" Grid.Row="5" Grid.Column="1" Style="{StaticResource ModernTextBoxStyle}" 
                             IsReadOnly="True" Background="#F0F0F0" Margin="0,10"/>

                    <!-- Is Active -->
                    <TextBlock Grid.Row="6" Grid.Column="0" Text="Active:" VerticalAlignment="Center" Margin="0,10"/>
                    <CheckBox x:Name="chkIsActive" Grid.Row="6" Grid.Column="1" Margin="0,10" IsChecked="True"/>

                    <!-- Component Selection Section -->
                    <TextBlock Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" Text="Select Components:" 
                               FontWeight="Bold" Margin="0,20,0,10" FontSize="14"/>

                    <!-- Component Selection Controls -->
                    <StackPanel Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,10,0,10">
                        <!-- Component Selection with Filtering -->
                        <Controls:FilteredComboBox x:Name="filteredComponentComboBox" 
                                                  Margin="0,0,0,15"
                                                  SelectionChanged="FilteredComponentComboBox_SelectionChanged"/>
                        
                        <!-- Quantity and Add Button Row -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Quantity:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBox x:Name="txtQuantity" Width="80" Style="{StaticResource ModernTextBoxStyle}" 
                                     Text="1" PreviewTextInput="txtQuantity_PreviewTextInput"/>
                            <Button x:Name="btnAddComponent" Content="Add Component" 
                                    Style="{StaticResource SuccessButtonStyle}" Margin="20,0,0,0"
                                    Click="btnAddComponent_Click"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Selected Components List -->
                    <DataGrid x:Name="dgSelectedComponents" Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="2" 
                              Height="200" AutoGenerateColumns="False" CanUserAddRows="False"
                              Margin="0,10,0,10">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Component" Binding="{Binding Component.Name}" Width="200"/>
                            <DataGridTextColumn Header="SKU" Binding="{Binding Component.SKU}" Width="100"/>
                            <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="80"/>
                            <DataGridTextColumn Header="Cost" Binding="{Binding Component.Cost, StringFormat=C}" Width="100"/>
                            <DataGridTextColumn Header="Total Cost" Binding="{Binding TotalCost, StringFormat=C}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Remove Component Button -->
                    <Button x:Name="btnRemoveComponent" Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="2"
                            Content="Remove Selected Component" Style="{StaticResource DangerButtonStyle}"
                            HorizontalAlignment="Left" Margin="0,10,0,10" Click="btnRemoveComponent_Click"/>

                    <!-- Summary -->
                    <Border Grid.Row="11" Grid.Column="0" Grid.ColumnSpan="2" Background="#E3F2FD" 
                            CornerRadius="5" Padding="15" Margin="0,10,0,10">
                        <StackPanel>
                            <TextBlock Text="Product Summary:" FontWeight="Bold" Margin="0,0,0,10" FontSize="14"/>
                            <TextBlock x:Name="txtSummary" Text="Add components to see summary"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <Border Grid.Row="2" Background="White" Padding="15" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="btnSave" 
                        Content="Save Product" 
                        Style="{StaticResource SuccessButtonStyle}"
                        Click="btnSave_Click"
                        Margin="0,0,10,0"/>
                
                <Button x:Name="btnCancel" 
                        Content="Cancel" 
                        Style="{StaticResource DangerButtonStyle}"
                        Click="btnCancel_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window> 