<Window x:Class="Moonglow_DB.Views.LocationsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Location Management" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles/SharedStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#E91E63" Padding="15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="🏪" FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBlock Text="Location Management" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Search and Filter -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Search:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox x:Name="txtSearch" Width="200" 
                         Style="{StaticResource ModernTextBoxStyle}"
                         TextChanged="txtSearch_TextChanged"
                         Margin="0,0,20,0"/>
                
                <TextBlock Text="Filter:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <ComboBox x:Name="cmbFilter" Width="150" 
                          Style="{StaticResource ModernComboBoxStyle}"
                          SelectionChanged="cmbFilter_SelectionChanged">
                    <ComboBoxItem Content="All Locations" IsSelected="True"/>
                    <ComboBoxItem Content="Active Only"/>
                    <ComboBoxItem Content="Online Only"/>
                </ComboBox>
            </StackPanel>

            <!-- DataGrid -->
            <DataGrid x:Name="dgLocations" Grid.Row="1" 
                      AutoGenerateColumns="False" 
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      SelectionChanged="dgLocations_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="200"/>
                    <DataGridTextColumn Header="Address" Binding="{Binding Address}" Width="250"/>
                    <DataGridTextColumn Header="Phone" Binding="{Binding Phone}" Width="120"/>
                    <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="150"/>
                    <DataGridCheckBoxColumn Header="Online" Binding="{Binding IsOnline}" Width="80"/>
                    <DataGridCheckBoxColumn Header="Active" Binding="{Binding IsActive}" Width="80"/>
                    <DataGridTextColumn Header="Created" Binding="{Binding CreatedDate, StringFormat=MM/dd/yyyy}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="20">
            <Button x:Name="btnAdd" Content="➕ Add Location" 
                    Style="{StaticResource SuccessButtonStyle}"
                    Click="btnAddLocation_Click" Margin="0,0,10,0"/>
            <Button x:Name="btnEdit" Content="✏️ Edit Location" 
                    Style="{StaticResource ModernButtonStyle}"
                    Click="btnEdit_Click" Margin="0,0,10,0"/>
            <Button x:Name="btnDelete" Content="🗑️ Delete Location" 
                    Style="{StaticResource DangerButtonStyle}"
                    Click="btnDelete_Click" Margin="0,0,10,0"/>
            <Button x:Name="btnRefresh" Content="🔄 Refresh" 
                    Style="{StaticResource ModernButtonStyle}"
                    Click="btnRefresh_Click"/>
        </StackPanel>
    </Grid>
</Window> 