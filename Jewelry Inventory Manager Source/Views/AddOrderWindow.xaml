<Window x:Class="Moonglow_DB.Views.AddOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="clr-namespace:Moonglow_DB.Views.Controls"
        Title="Create New Order" Height="700" Width="1000"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles/SharedStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#009688" Padding="15">
            <TextBlock Text="Create New Order" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Order Number -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Order Number:" VerticalAlignment="Center" Margin="0,10"/>
                    <TextBox x:Name="txtOrderNumber" Grid.Row="0" Grid.Column="1" Style="{StaticResource ModernTextBoxStyle}" Margin="0,10"/>

                    <!-- Customer -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Customer:" VerticalAlignment="Center" Margin="0,10"/>
                    <ComboBox x:Name="cmbCustomer" Grid.Row="1" Grid.Column="1" Style="{StaticResource ModernComboBoxStyle}" 
                              DisplayMemberPath="Name" Margin="0,10" SelectionChanged="cmbCustomer_SelectionChanged"/>

                    <!-- Employee -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Employee:" VerticalAlignment="Center" Margin="0,10"/>
                    <ComboBox x:Name="cmbEmployee" Grid.Row="2" Grid.Column="1" Style="{StaticResource ModernComboBoxStyle}" 
                              DisplayMemberPath="Name" Margin="0,10" SelectionChanged="cmbEmployee_SelectionChanged"/>

                    <!-- Order Type -->
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Order Type:" VerticalAlignment="Center" Margin="0,10"/>
                    <ComboBox x:Name="cmbOrderType" Grid.Row="3" Grid.Column="1" Style="{StaticResource ModernComboBoxStyle}" 
                              Margin="0,10" SelectionChanged="cmbOrderType_SelectionChanged"/>

                    <!-- Order Status -->
                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Order Status:" VerticalAlignment="Center" Margin="0,10"/>
                    <ComboBox x:Name="cmbOrderStatus" Grid.Row="4" Grid.Column="1" Style="{StaticResource ModernComboBoxStyle}" 
                              Margin="0,10" SelectionChanged="cmbOrderStatus_SelectionChanged"/>

                    <!-- Product Selection Section -->
                    <TextBlock Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Text="Add Products:" 
                               FontWeight="Bold" Margin="0,20,0,10" FontSize="14"/>

                    <!-- Product Selection Controls -->
                    <StackPanel Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,10,0,10">
                        <!-- Product Selection with Filtering -->
                        <Controls:FilteredComboBox x:Name="filteredProductComboBox" 
                                                  Margin="0,0,0,15"
                                                  SelectionChanged="FilteredProductComboBox_SelectionChanged"/>
                        
                        <!-- Quantity and Price Row -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="Quantity:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBox Grid.Column="1" x:Name="txtQuantity" Style="{StaticResource ModernTextBoxStyle}" 
                                     Text="1" PreviewTextInput="txtQuantity_PreviewTextInput"/>
                            
                            <TextBlock Grid.Column="2" Text="Unit Price:" VerticalAlignment="Center" Margin="20,0,10,0"/>
                            <TextBox Grid.Column="3" x:Name="txtUnitPrice" Style="{StaticResource ModernTextBoxStyle}" 
                                     IsReadOnly="True" Background="#F0F0F0"/>
                            
                            <Button Grid.Column="4" x:Name="btnAddProduct" Content="Add Product" 
                                    Style="{StaticResource SuccessButtonStyle}" Margin="20,0,0,0"
                                    Click="btnAddProduct_Click"/>
                        </Grid>
                    </StackPanel>

                    <!-- Selected Products List -->
                    <DataGrid x:Name="dgOrderItems" Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" 
                              Height="200" AutoGenerateColumns="False" CanUserAddRows="False"
                              Margin="0,10,0,10">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Product" Binding="{Binding ProductName}" Width="200"/>
                            <DataGridTextColumn Header="SKU" Binding="{Binding ProductSKU}" Width="100"/>
                            <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="80"/>
                            <DataGridTextColumn Header="Unit Price" Binding="{Binding UnitPrice, StringFormat=C}" Width="100"/>
                            <DataGridTextColumn Header="Total Price" Binding="{Binding TotalPrice, StringFormat=C}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Remove Product Button -->
                    <Button x:Name="btnRemoveProduct" Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2"
                            Content="Remove Selected Product" Style="{StaticResource DangerButtonStyle}"
                            HorizontalAlignment="Left" Margin="0,10,0,10" Click="btnRemoveProduct_Click"/>

                    <!-- Order Summary -->
                    <Border Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="2" Background="#E0F2F1" 
                            CornerRadius="5" Padding="15" Margin="0,10,0,10">
                        <StackPanel>
                            <TextBlock Text="Order Summary:" FontWeight="Bold" Margin="0,0,0,10" FontSize="14"/>
                            <TextBlock x:Name="txtOrderSummary" Text="Add products to see summary"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <Border Grid.Row="2" Background="White" Padding="15" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="btnSave" 
                        Content="Create Order" 
                        Style="{StaticResource SuccessButtonStyle}"
                        Click="btnSave_Click"
                        Margin="0,0,10,0"/>
                
                <Button x:Name="btnCancel" 
                        Content="Cancel" 
                        Style="{StaticResource DangerButtonStyle}"
                        Click="btnCancel_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window> 