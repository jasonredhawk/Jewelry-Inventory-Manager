<Window x:Class="Moonglow_DB.Views.SetMinimumStockWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="clr-namespace:Moonglow_DB.Views.Controls"
        Title="Set Minimum Stock" Height="500" Width="700"
        WindowStartupLocation="CenterOwner"
        MinHeight="520" MinWidth="700"
        Background="#F5F5F5">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles/SharedStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF9800" Padding="15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="âš™ï¸" FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBlock Text="Set Minimum Stock" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20" VerticalAlignment="Top">
                
                <!-- Location Selection -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <TextBlock Text="Location:" VerticalAlignment="Center" Width="100" FontWeight="Bold"/>
                    <ComboBox x:Name="cmbLocation" Width="200" Height="30" Margin="0,0,0,0" SelectionChanged="cmbLocation_SelectionChanged"/>
                </StackPanel>

                <!-- Item Type Selection -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <TextBlock Text="Item Type:" VerticalAlignment="Center" Width="100" FontWeight="Bold"/>
                    <ComboBox x:Name="cmbItemType" Width="200" Height="30" Margin="0,0,0,0" SelectionChanged="cmbItemType_SelectionChanged">
                        <ComboBoxItem Content="Component" IsSelected="True"/>
                        <ComboBoxItem Content="Product"/>
                    </ComboBox>
                </StackPanel>

                <!-- Item Selection with Filtering -->
                <Controls:FilteredComboBox x:Name="filteredItemComboBox" 
                                          SelectionChanged="FilteredItemComboBox_SelectionChanged"/>

                <!-- Current Info Display -->
                <Border Background="White" Padding="15" Margin="0,0,0,15" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="Current Information" FontWeight="Bold" Margin="0,0,0,10"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Current Stock:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                            <TextBlock x:Name="txtCurrentStock" Grid.Row="0" Grid.Column="1" Text="0" Margin="0,0,20,5"/>
                            
                            <TextBlock Grid.Row="0" Grid.Column="2" Text="Current Min Stock:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                            <TextBlock x:Name="txtCurrentMinStock" Grid.Row="0" Grid.Column="3" Text="0" Margin="0,0,0,5"/>
                            
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Item Name:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                            <TextBlock x:Name="txtItemName" Grid.Row="1" Grid.Column="1" Text="" Margin="0,0,20,5"/>
                            
                            <TextBlock Grid.Row="1" Grid.Column="2" Text="Location:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                            <TextBlock x:Name="txtLocationName" Grid.Row="1" Grid.Column="3" Text="" Margin="0,0,0,5"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- New Minimum Stock Input -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <TextBlock Text="New Minimum Stock:" VerticalAlignment="Center" Width="150" FontWeight="Bold"/>
                    <TextBox x:Name="txtNewMinimumStock" Width="100" Height="30" Style="{StaticResource ModernTextBoxStyle}" PreviewTextInput="txtNewMinimumStock_PreviewTextInput"/>
                    <TextBlock Text="(Enter 0 to remove minimum stock)" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="#666" FontSize="12"/>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="20">
            <Button x:Name="btnSave" 
                    Content="ðŸ’¾ Save" 
                    Style="{StaticResource SuccessButtonStyle}"
                    Click="btnSave_Click"
                    Width="100" Height="30"
                    Margin="0,0,10,0"/>
            
            <Button x:Name="btnCancel" 
                    Content="âŒ Cancel" 
                    Style="{StaticResource DangerButtonStyle}"
                    Click="btnCancel_Click"
                    Width="100" Height="30"/>
        </StackPanel>
    </Grid>
</Window> 