<Window x:Class="Moonglow_DB.Views.InventoryTransferWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Inventory Transfer" Height="500" Width="700"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles/SharedStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF9800" Padding="15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="ðŸšš" FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBlock Text="Inventory Transfer" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20" VerticalAlignment="Top">
                
                <!-- Item Type -->
                <TextBlock Text="Item Type *" FontWeight="Bold" Margin="0,0,0,5"/>
                <ComboBox x:Name="cmbItemType" 
                          Style="{StaticResource ModernComboBoxStyle}"
                          SelectionChanged="cmbItemType_SelectionChanged"
                          Margin="0,0,0,15"/>

                <!-- Item Selection -->
                <TextBlock Text="Item *" FontWeight="Bold" Margin="0,0,0,5"/>
                <ComboBox x:Name="cmbItem" 
                          Style="{StaticResource ModernComboBoxStyle}"
                          SelectionChanged="cmbItem_SelectionChanged"
                          Margin="0,0,0,15"/>

                <!-- From Location -->
                <TextBlock Text="From Location *" FontWeight="Bold" Margin="0,0,0,5"/>
                <ComboBox x:Name="cmbFromLocation" 
                          Style="{StaticResource ModernComboBoxStyle}"
                          SelectionChanged="cmbFromLocation_SelectionChanged"
                          Margin="0,0,0,15"/>

                <!-- To Location -->
                <TextBlock Text="To Location *" FontWeight="Bold" Margin="0,0,0,5"/>
                <ComboBox x:Name="cmbToLocation" 
                          Style="{StaticResource ModernComboBoxStyle}"
                          Margin="0,0,0,15"/>

                <!-- Available Stock -->
                <TextBlock Text="Available Stock" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBlock x:Name="txtAvailableStock" 
                           Text="0" 
                           FontSize="16" 
                           Foreground="#2196F3"
                           Margin="0,0,0,15"/>

                <!-- Transfer Quantity -->
                <TextBlock Text="Transfer Quantity *" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="txtTransferQuantity" 
                         Style="{StaticResource ModernTextBoxStyle}"
                         Text="0"
                         PreviewTextInput="txtTransferQuantity_PreviewTextInput"
                         Margin="0,0,0,15"/>

                <!-- Notes -->
                <TextBlock Text="Notes" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="txtNotes" 
                         Style="{StaticResource ModernTextBoxStyle}"
                         Height="80"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         Margin="0,0,0,15"/>

            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="20">
            <Button x:Name="btnTransfer" Content="ðŸšš Execute Transfer" 
                    Style="{StaticResource SuccessButtonStyle}"
                    Click="btnTransfer_Click" Margin="0,0,10,0"/>
            <Button x:Name="btnCancel" Content="âŒ Cancel" 
                    Style="{StaticResource ModernButtonStyle}"
                    Click="btnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window> 