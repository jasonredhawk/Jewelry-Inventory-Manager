<Window x:Class="Moonglow_DB.Views.AddTransactionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Inventory Transaction" Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">
    
    <Window.Resources>
        <ResourceDictionary Source="../Styles/SharedStyles.xaml"/>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#FF9800" CornerRadius="5" Margin="0,0,0,20">
            <TextBlock Text="Add Inventory Transaction" 
                       FontSize="18" FontWeight="Bold" 
                       Foreground="White" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       Padding="20,10"/>
        </Border>
        
        <!-- Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Transaction Type -->
                <TextBlock Text="Transaction Type:" FontWeight="Bold" Margin="0,0,0,5"/>
                <ComboBox x:Name="cmbTransactionType" 
                          Margin="0,0,0,15"
                          SelectionChanged="cmbTransactionType_SelectionChanged"/>
                
                <!-- Item Type -->
                <TextBlock Text="Item Type:" FontWeight="Bold" Margin="0,0,0,5"/>
                <ComboBox x:Name="cmbItemType" 
                          Margin="0,0,0,15"
                          SelectionChanged="cmbItemType_SelectionChanged">
                    <ComboBoxItem Content="Product"/>
                    <ComboBoxItem Content="Component"/>
                </ComboBox>
                
                <!-- Item Selection -->
                <TextBlock Text="Item:" FontWeight="Bold" Margin="0,0,0,5"/>
                <ComboBox x:Name="cmbItem" 
                          Margin="0,0,0,15"
                          DisplayMemberPath="Name"
                          SelectionChanged="cmbItem_SelectionChanged"/>
                
                <!-- Quantity -->
                <TextBlock Text="Quantity:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="txtQuantity" 
                         Style="{StaticResource ModernTextBoxStyle}"
                         Margin="0,0,0,15"
                         PreviewTextInput="txtQuantity_PreviewTextInput"/>
                
                <!-- Location -->
                <TextBlock Text="Location:" FontWeight="Bold" Margin="0,0,0,5"/>
                <ComboBox x:Name="cmbLocation" 
                          Margin="0,0,0,15"
                          DisplayMemberPath="Name"/>
                
                <!-- Notes -->
                <TextBlock Text="Notes:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="txtNotes" 
                         Style="{StaticResource ModernTextBoxStyle}"
                         Margin="0,0,0,15"
                         Height="80"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"/>
                
                <!-- Current Stock Info -->
                <Border Background="#E3F2FD" CornerRadius="5" Padding="10" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Current Stock Information:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBlock x:Name="txtCurrentStockInfo" Text="Select an item to see current stock information"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="btnSave" 
                    Content="Save Transaction" 
                    Style="{StaticResource SuccessButtonStyle}"
                    Width="120" Height="35" 
                    Margin="0,0,10,0"
                    Click="btnSave_Click"/>
            <Button x:Name="btnCancel" 
                    Content="Cancel" 
                    Style="{StaticResource DangerButtonStyle}"
                    Width="80" Height="35"
                    Click="btnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window> 