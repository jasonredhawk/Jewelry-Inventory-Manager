<Window x:Class="Moonglow_DB.Views.ConnectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Database Connection Settings"
        Height="400" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../Styles/SharedStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#FF9800" Padding="15,10" Margin="0,0,0,20">
            <TextBlock Text="Database Connection Settings" 
                       Foreground="White" 
                       FontSize="18" 
                       FontWeight="Bold"/>
        </Border>
        
        <!-- Connection Form -->
        <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <TextBlock Text="Configure your MySQL database connection:" 
                       FontWeight="SemiBold" 
                       Margin="0,0,0,15"/>
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Server -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Server:" VerticalAlignment="Center" Margin="0,5"/>
                <TextBox x:Name="txtServer" Grid.Row="0" Grid.Column="1" 
                         Style="{StaticResource ModernTextBoxStyle}" 
                         Text="localhost"/>
                
                <!-- Port -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Port:" VerticalAlignment="Center" Margin="0,5"/>
                <TextBox x:Name="txtPort" Grid.Row="1" Grid.Column="1" 
                         Style="{StaticResource ModernTextBoxStyle}" 
                         Text="3306"/>
                
                <!-- Database -->
                <TextBlock Grid.Row="2" Grid.Column="0" Text="Database:" VerticalAlignment="Center" Margin="0,5"/>
                <TextBox x:Name="txtDatabase" Grid.Row="2" Grid.Column="1" 
                         Style="{StaticResource ModernTextBoxStyle}" 
                         Text="moonglow_jewelry"/>
                
                <!-- Username -->
                <TextBlock Grid.Row="3" Grid.Column="0" Text="Username:" VerticalAlignment="Center" Margin="0,5"/>
                <TextBox x:Name="txtUsername" Grid.Row="3" Grid.Column="1" 
                         Style="{StaticResource ModernTextBoxStyle}" 
                         Text="root"/>
                
                <!-- Password -->
                <TextBlock Grid.Row="4" Grid.Column="0" Text="Password:" VerticalAlignment="Center" Margin="0,5"/>
                <PasswordBox x:Name="txtPassword" Grid.Row="4" Grid.Column="1" 
                            Style="{StaticResource ModernPasswordBoxStyle}"/>
                
                <!-- Test Connection -->
                <Button x:Name="btnTestConnection" Grid.Row="5" Grid.Column="1" 
                        Content="Test Connection" 
                        Style="{StaticResource ModernButtonStyle}"
                        HorizontalAlignment="Left" 
                        Margin="0,15,0,0"
                        Click="BtnTestConnection_Click"/>
            </Grid>
            
            <!-- Connection Status -->
            <Border x:Name="borderStatus" Margin="0,15,0,0" Padding="10" 
                    Background="#F5F5F5" BorderBrush="#E0E0E0" BorderThickness="1">
                <TextBlock x:Name="txtStatus" Text="Enter your database connection details and click 'Test Connection' to verify." 
                           TextWrapping="Wrap"/>
            </Border>
        </StackPanel>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnSave" Content="Save &amp; Connect" 
                    Style="{StaticResource SuccessButtonStyle}" 
                    Click="BtnSave_Click"/>
            <Button x:Name="btnCancel" Content="Cancel" 
                    Style="{StaticResource DangerButtonStyle}" 
                    Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window> 